<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.GetPhoneNumberActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="شماره همراه"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/vazir_bold"
        android:textSize="@dimen/_12sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شماره همراه خود را جهت دریافت کد وارد نمایید"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/vazir_medium"
        android:textColor="@color/gray500"
        android:layout_marginTop="@dimen/_40sdp"/>

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/phoneInput2"
        android:hint="120000000"
        app:maskIcon="@drawable/ic_local_phone_black_24dp"
        android:fontFamily="@font/vazir_medium_fd"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittext_border"
        android:inputType="phone"
        android:typeface="monospace"
        app:allowed_chars="1234567890"
        app:mask="09## ### ####"
        app:keep_hint="true"/>

    <Button
        android:id="@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دریافت کد"
        android:fontFamily="@font/vazir_medium_fd"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/disable_button"
        android:textColor="@color/gray500"/>


</LinearLayout>